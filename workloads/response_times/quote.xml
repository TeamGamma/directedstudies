<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

    <!-- Client side setup -->
    <clients>
        <client host="master" use_controller_vm="true" maxusers="10000" />
    </clients>

    <!-- Server side setup -->
    <servers>
        <server host="web1" port="80" type="tcp"></server>
        <server host="web2" port="80" type="tcp"></server>
    </servers>

    <monitoring>
        <!-- Monitor 3 web servers over eth1 -->
        <monitor host="monitorweb1" type="erlang"></monitor>
        <monitor host="monitorweb2" type="erlang"></monitor>

        <!-- Monitor transaction server -->
        <monitor host="monitorts" type="erlang"></monitor>

        <!-- Monitor database -->
        <monitor host="monitordb" type="erlang"></monitor>
    </monitoring>

    <!-- Maximum duration of entire session is 1000 seconds -->
    <load duration="1000" unit="second">
        <!-- 1000 clients in total, 20 arriving every second for one minute -->
        <arrivalphase phase="1" duration="60" unit="second">
            <users maxnumber="1000" arrivalrate="20" unit="second"></users>
        </arrivalphase>
    </load>

    <sessions>

        <!-- A simple realistic user that only buys and sells, no triggers -->
        <session name="quote" probability="100" type="ts_http">
            <!-- Just repeat indefinitely -->
            <for from="1" to="10000" var="i">

                <setdynvars sourcetype="random_string" length="10">
                    <var name="username"/>
                </setdynvars>
                <setdynvars sourcetype="random_string" length="4">
                    <var name="stock_symbol"/>
                </setdynvars>

                <!-- QUOTE request -->
                <request subst="true">
                    <http url="/QUOTE" method="POST" version="1.1" contents="username=%%_username%%&amp;stock_symbol=%%_stock_symbol%%"></http>
                </request>
                <thinktime value="1" random="true"></thinktime>

            </for>
        </session>

    </sessions>
</tsung>



